<div class="container mt-5">
  <form method="post" action="/add">
    <div class="mb-3">
      <label for="name" class="form-label">Product Name</label>
      <input
        type="text"
        name="name"
        class="form-control"
        id="name"
        aria-describedby="emailHelp"
      />
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Product Price</label>
      <input type="text" name="price" class="form-control" id="price" />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <input type="text" name="description" class="form-control" id="price" />
    </div>
    <div class="mb-3">
      <div
        class="btn-group"
        role="group"
        aria-label="Basic checkbox toggle button group"
      >
        <input
          name="category"
          value="1"
          type="checkbox"
          class="btn-check"
          id="btncheck1"
          autocomplete="off"
        />
        <label class="btn btn-outline-primary" for="btncheck1">Gadget</label>

        <input
          name="category"
          value="2"
          type="checkbox"
          class="btn-check"
          id="btncheck2"
          autocomplete="off"
        />
        <label class="btn btn-outline-primary" for="btncheck2">Perabotan</label>

        <input
          name="category"
          value="3"
          type="checkbox"
          class="btn-check"
          id="btncheck3"
          autocomplete="off"
        />
        <label class="btn btn-outline-primary" for="btncheck3">Peralatan</label>
        <input
          name="category"
          value="4"
          type="checkbox"
          class="btn-check"
          id="btncheck4"
          autocomplete="off"
        />
        <label class="btn btn-outline-primary" for="btncheck4"
          >Alat Tulis</label
        >
        <input
          name="category"
          value="5"
          type="checkbox"
          class="btn-check"
          id="btncheck5"
          autocomplete="off"
        />
        <label class="btn btn-outline-primary" for="btncheck5">Fashion</label>
      </div>
    </div>
    <a href="/">
      <button type="button" class="btn btn-danger">Cancel</button>
    </a>
    <button type="submit" class="btn btn-primary">Insert</button>
  </form>
</div>
