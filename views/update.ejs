<div class="container mt-5">
  <form method="post" action="/product/update">
    <div class="mb-3">
      <label for="name" class="form-label">Product Name</label>
      <input
        type="text"
        name="name"
        class="form-control"
        value="<%= data.name %>"
        id="name"
        aria-describedby="emailHelp"
      />
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Product Price</label>
      <input
        value="<%= data.price %>"
        type="text"
        name="price"
        class="form-control"
        id="price"
      />
      <input
        type="text"
        hidden
        name="id"
        class="form-control"
        id="price"
        value="<%= data.id  %>"
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <input
        value="<%= data.description %>"
        type="text"
        name="description"
        class="form-control"
        id="price"
      />
    </div>
    <div class="mb-3">
      <div
        class="btn-group"
        role="group"
        aria-label="Basic checkbox toggle button group"
      >
        <input
          name="category"
          value="1"
          type="checkbox"
          class="btn-check"
          id="btncheck1"
          autocomplete="off"
          <% if (data.productTags.includes("1")) { %>
            checked <%}%> />
        <label class="btn btn-outline-primary" for="btncheck1">Gadget</label>

        <input
        <% if (data.productTags.includes("2")) { %>
          checked <%}%>
          name="category"
          value="2"
          type="checkbox"
          class="btn-check"
          id="btncheck2"
          autocomplete="off"
        />
        <label class="btn btn-outline-primary" for="btncheck2">Perabotan</label>

        <input
        <% if (data.productTags.includes("3")) { %>
          checked <%}%>
          name="category"
          value="3"
          type="checkbox"
          class="btn-check"
          id="btncheck3"
          autocomplete="off"
        />
        <label class="btn btn-outline-primary" for="btncheck3">Peralatan</label>
        <input
        <% if (data.productTags.includes("4")) { %>
          checked <%}%>
          name="category"
          value="4"
          type="checkbox"
          class="btn-check"
          id="btncheck4"
          autocomplete="off"
        />
        <label class="btn btn-outline-primary" for="btncheck4"
          >Alat Tulis</label
        >
        <input
        <% if (data.productTags.includes("5")) { %>
          checked <%}%>
          name="category"
          value="5"
          type="checkbox"
          class="btn-check"
          id="btncheck5"
          autocomplete="off"
        />
        <label class="btn btn-outline-primary" for="btncheck5">Fashion</label>
      </div>
    </div>
    <a href="/product">
      <button type="button" class="btn btn-danger">Cancel</button>
    </a>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>

